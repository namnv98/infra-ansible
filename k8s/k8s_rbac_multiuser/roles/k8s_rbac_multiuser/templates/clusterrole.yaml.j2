{% for role_name, rule in k8s_rbac_roles_cluster.items() %}
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: {{ role_name }}
rules:
- apiGroups: [""]
  resources: {{ rule.resources }}
  verbs: {{ rule.verbs }}
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: {{ role_name }}-binding
subjects:
{% for group in rule.users %}
{% for user in k8s_rbac_users[group] %}
- kind: User
  name: {{ user }}
{% endfor %}
{% endfor %}
{% for sa in rule.serviceaccounts %}
- kind: ServiceAccount
  name: {{ sa }}
  namespace: {{ sa.split('-')[0] }}
{% endfor %}
roleRef:
  kind: ClusterRole
  name: {{ role_name }}
  apiGroup: rbac.authorization.k8s.io
---
{% endfor %}
