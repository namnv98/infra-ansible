{% for namespace, roles in k8s_rbac_roles_ns.items() %}
{% for role_name, rule in roles.items() %}
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  namespace: {{ namespace }}
  name: {{ role_name }}
rules:
- apiGroups: [""]
  resources: {{ rule.resources }}
  verbs: {{ rule.verbs }}
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: {{ role_name }}-binding
  namespace: {{ namespace }}
subjects:
{% for group in rule.users %}
{% for user in k8s_rbac_users[group] %}
- kind: User
  name: {{ user }}
{% endfor %}
{% endfor %}
{% for sa in rule.serviceaccounts %}
- kind: ServiceAccount
  name: {{ sa }}
  namespace: {{ namespace }}
{% endfor %}
roleRef:
  kind: Role
  name: {{ role_name }}
  apiGroup: rbac.authorization.k8s.io
---
{% endfor %}
{% endfor %}
